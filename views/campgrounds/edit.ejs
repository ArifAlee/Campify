<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">Name:</label>
                    <input class="form-control" type="text" id="name" name="campground[name]"
                        value="<%=campground.name %>" required>
                    <div class="invalid-feedback">
                        Name required!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        value="<%=campground.location %>" required>
                    <div class="invalid-feedback">
                        Location required! e.g. Lake District, UK
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground price:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">Â£</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%=campground.price %>"
                            required>
                        <div class="invalid-feedback">
                            Price is required
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" type="textarea" id="description" name="campground[description]"
                        required><%= campground.description%></textarea>
                    <div class="invalid-feedback">
                        Please provide a description of the campground
                    </div>
                </div>
                <div class="mb-3">
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" id="image" name="image" multiple max="5">
                        <label class="input-group-text" for="image">Image(s)</label>
                    </div>
                    <label class="mb-2 form-label">Please choose which images to delete: </label>
                    <% campground.images.forEach((img, i)=> { %>
                        <div class="d-inline">
                            <div class="form-check">
                                <label for="img-<%=i%>"><img crossorigin="anonymous" src="<%=img.url %>"
                                        class="img-thumbnail mb-2 thumbnail-size" for="img-<%=i%>"></label>
                                <input class="form-check-input" type="checkbox" name="deleteImages[]"
                                    value="<%=img.filename%>" id="img-<%=i%>" </div>
                            </div>
                            <% }) %>
                        </div>
                        <div class="d-grid mb-3">
                            <button class="btn btn-success" type="submit">Update Campground</button>
                        </div>
            </form>
            <div class="d-grid">
                <a href="/campgrounds" class="btn btn-light">Cancel</a>
            </div>
        </div>
    </div>