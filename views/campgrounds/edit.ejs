<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST" novalidate
                class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="name">Name:</label>
                    <input class="form-control" type="text" id="name" name="campground[name]"
                        value="<%=campground.name %>" required>
                    <div class="invalid-feedback">
                        Name required!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        value="<%=campground.location %>" required>
                    <div class="invalid-feedback">
                        Location required! e.g. Lake District, England
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url:</label>
                    <input class="form-control" type="url" id="image" name="campground[image]"
                        value="<%=campground.image %>" required>
                    <div class="invalid-feedback">
                        Please provide a valid URL
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground price:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">Â£</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%=campground.price %>"
                            required>
                        <div class="invalid-feedback">
                            Price is required
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" type="textarea" id="description" name="campground[description]"
                        required><%= campground.description%></textarea>
                    <div class="invalid-feedback">
                        Please provide a description of the campground
                    </div>
                </div>

                <button class="btn btn-info" type="submit">Update Campground</button>
            </form>
            <a href="/campgrounds">Cancel</a>
        </div>
    </div>