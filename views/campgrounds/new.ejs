<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form" autocomplete="off">
                <div class="mb-3">
                    <label class="form-label" for="name">Name:</label>
                    <input class="form-control" type="text" id="name" name="campground[name]" required>
                    <div class="invalid-feedback">
                        Name required!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                    <div class="invalid-feedback">
                        Location required! e.g. Lake District, England
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url:</label>
                    <input class="form-control" type="url" id="image" name="campground[image]" required>
                    <div class="invalid-feedback">
                        Please provide a valid URL
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Campground price:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">Â£</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" required>
                        <div class="invalid-feedback">
                            Price is required
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" type="textarea" id="description" name="campground[description]"
                        required></textarea>
                    <div class="invalid-feedback">
                        Please provide a description of the campground
                    </div>
                </div>

                <button class="btn btn-success" type="submit">Add Campground</button>
            </form>
        </div>
    </div>


    <a href="/campgrounds">Cancel</a>