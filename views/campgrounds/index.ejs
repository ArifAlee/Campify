<% layout("layouts/boilerplate") %>

    <h1>All Campgrounds at Campify</h1>
    <a href="/campgrounds/new" class="btn btn-secondary mt-3 mb-2">Add new campground</a>

            <% for( let campground of campgrounds){ %>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4"> 
                            <img class="image-fluid" src="<%=campground.image %>" alt="Campground image">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"> <%= campground.name %> </h5>
                                <p class="card-text"> <%= campground.description %> </p>
                                <p class="card-text">
                                    <small class="text-muted"> <%= campground.location %> </small>
                                </p>
                                <a class="btn btn-primary btn-sm" href="/campgrounds/<%=campground._id%>"> View <%=campground.name %></a>

                            </div>
                        </div>
                    </div>
                </div>
                <% } %>


